<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - LBM UI Kit v1.0.0</title>

    <!-- LBM UI Kit CSS (Auto-loads Bootstrap & Font Awesome) -->
    <link href="/v/1.0.0/assets/lbm-ui-kit.css" rel="stylesheet">

    <!-- Additional CSS for this version -->
    <% if (locals.additionalCSS) { %>
        <% additionalCSS.forEach(function(css) { %>
            <link href="<%= css %>" rel="stylesheet">
        <% }); %>
    <% } %>
</head>

<body class="scrollbar-hidden">
    <!-- Header -->
    <%- include('../partials/header') %>

    <!-- Main Layout -->
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar Navigation -->
            <nav class="col-md-3 col-lg-2 d-md-block sidebar collapse scrollbar-hidden" data-bs-theme-target="sidebar">
                <%- include('../partials/sidebar') %>
            </nav>

            <!-- Main Content Area -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 scrollbar-custom">
                <div class="content-wrapper">
                    <%- body %>
                </div>
            </main>
        </div>
    </div>

    <!-- Footer -->
    <%- include('../partials/footer') %>

    <!-- LBM UI Kit JS (Auto-loads Bootstrap JS) -->
    <script src="/v/1.0.0/assets/lbm-ui-kit.js"></script>

    <!-- LBM API Client -->
    <script src="/v/1.0.0/assets/lbm-api-client.js"></script>

    <!-- Main JavaScript functionality -->
    <script src="/v/1.0.0/assets/js/main.js"></script>

    <!-- Search Components functionality -->
    <script src="/v/1.0.0/assets/js/search-components.js"></script>
</body>

</html>