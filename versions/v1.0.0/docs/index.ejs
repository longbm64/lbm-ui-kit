<%- include('../../../shared/layouts/version', {
    title: 'Documentation - LBM UI Kit v' + version.version,
    version: version,
    breadcrumbs: [
        { title: 'Home', url: '/' + version.version },
        { title: 'Documentation', url: '/' + version.version + '/docs' }
    ]
}) %>

<% contentFor('content') %>
<div class="container-fluid">
    <!-- Page Header -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="text-center">
                <h1 class="display-5 fw-bold mb-3">
                    <i class="fas fa-book me-3 text-primary"></i>
                    Documentation
                </h1>
                <p class="lead text-muted mb-4">
                    Complete guide and reference for LBM UI Kit v<%= version.version %>
                </p>
                <div class="d-flex justify-content-center gap-3 flex-wrap">
                    <a href="/<%= version.version %>/demo" class="btn btn-primary">
                        <i class="fas fa-play me-2"></i>
                        View Demos
                    </a>
                    <a href="#getting-started" class="btn btn-outline-primary">
                        <i class="fas fa-rocket me-2"></i>
                        Get Started
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Quick Navigation -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-compass me-2"></i>
                        Quick Navigation
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 col-sm-6 mb-3">
                            <a href="#getting-started" class="text-decoration-none">
                                <div class="d-flex align-items-center p-3 bg-light rounded hover-bg-primary">
                                    <i class="fas fa-rocket fa-2x text-primary me-3"></i>
                                    <div>
                                        <h6 class="mb-1">Getting Started</h6>
                                        <small class="text-muted">Installation & Setup</small>
                                    </div>
                                </div>
                            </a>
                        </div>
                        <div class="col-md-3 col-sm-6 mb-3">
                            <a href="#components" class="text-decoration-none">
                                <div class="d-flex align-items-center p-3 bg-light rounded hover-bg-primary">
                                    <i class="fas fa-puzzle-piece fa-2x text-success me-3"></i>
                                    <div>
                                        <h6 class="mb-1">Components</h6>
                                        <small class="text-muted">UI Components Guide</small>
                                    </div>
                                </div>
                            </a>
                        </div>
                        <div class="col-md-3 col-sm-6 mb-3">
                            <a href="#customization" class="text-decoration-none">
                                <div class="d-flex align-items-center p-3 bg-light rounded hover-bg-primary">
                                    <i class="fas fa-palette fa-2x text-warning me-3"></i>
                                    <div>
                                        <h6 class="mb-1">Customization</h6>
                                        <small class="text-muted">Theming & Styling</small>
                                    </div>
                                </div>
                            </a>
                        </div>
                        <div class="col-md-3 col-sm-6 mb-3">
                            <a href="#api-reference" class="text-decoration-none">
                                <div class="d-flex align-items-center p-3 bg-light rounded hover-bg-primary">
                                    <i class="fas fa-code fa-2x text-info me-3"></i>
                                    <div>
                                        <h6 class="mb-1">API Reference</h6>
                                        <small class="text-muted">Technical Details</small>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Getting Started Section -->
    <div class="row mb-5" id="getting-started">
        <div class="col-12">
            <h2 class="mb-4">
                <i class="fas fa-rocket me-2 text-primary"></i>
                Getting Started
            </h2>
            
            <div class="row">
                <div class="col-lg-6 mb-4">
                    <div class="card h-100">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="fas fa-download me-2"></i>
                                Installation
                            </h5>
                        </div>
                        <div class="card-body">
                            <p>Include the required dependencies in your HTML:</p>
                            <pre class="bg-light p-3 rounded demo-code"><code>&lt;!-- Bootstrap CSS --&gt;
&lt;link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"&gt;

&lt;!-- FontAwesome Icons --&gt;
&lt;link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet"&gt;

&lt;!-- LBM UI Kit CSS --&gt;
&lt;link href="/versions/v<%= version.version %>/assets/css/lbm-ui-kit.css" rel="stylesheet"&gt;</code></pre>
                            
                            <p class="mt-3">Add JavaScript dependencies before closing body tag:</p>
                            <pre class="bg-light p-3 rounded demo-code"><code>&lt;!-- Bootstrap JS --&gt;
&lt;script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"&gt;&lt;/script&gt;

&lt;!-- LBM UI Kit JS --&gt;
&lt;script src="/versions/v<%= version.version %>/assets/js/lbm-ui-kit.js"&gt;&lt;/script&gt;</code></pre>
                        </div>
                    </div>
                </div>
                
                <div class="col-lg-6 mb-4">
                    <div class="card h-100">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="fas fa-info-circle me-2"></i>
                                Requirements
                            </h5>
                        </div>
                        <div class="card-body">
                            <h6>Dependencies:</h6>
                            <ul class="list-unstyled">
                                <% config.dependencies.forEach(dep => { %>
                                <li class="mb-2">
                                    <span class="badge bg-primary me-2"><%= dep.name %></span>
                                    <span class="text-muted">v<%= dep.version %></span>
                                    <% if (dep.required) { %>
                                        <span class="badge bg-danger ms-2">Required</span>
                                    <% } %>
                                </li>
                                <% }) %>
                            </ul>
                            
                            <h6 class="mt-4">Browser Support:</h6>
                            <div class="row text-center">
                                <div class="col-3">
                                    <i class="fab fa-chrome fa-2x text-success"></i>
                                    <div><small>Chrome 90+</small></div>
                                </div>
                                <div class="col-3">
                                    <i class="fab fa-firefox fa-2x text-warning"></i>
                                    <div><small>Firefox 88+</small></div>
                                </div>
                                <div class="col-3">
                                    <i class="fab fa-safari fa-2x text-info"></i>
                                    <div><small>Safari 14+</small></div>
                                </div>
                                <div class="col-3">
                                    <i class="fab fa-edge fa-2x text-primary"></i>
                                    <div><small>Edge 90+</small></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Components Section -->
    <div class="row mb-5" id="components">
        <div class="col-12">
            <h2 class="mb-4">
                <i class="fas fa-puzzle-piece me-2 text-success"></i>
                Components
            </h2>
            
            <div class="row">
                <% 
                const componentsByCategory = {};
                config.components.forEach(comp => {
                    if (!componentsByCategory[comp.category]) {
                        componentsByCategory[comp.category] = [];
                    }
                    componentsByCategory[comp.category].push(comp);
                });
                %>
                
                <% Object.keys(componentsByCategory).forEach(category => { %>
                <div class="col-lg-6 mb-4">
                    <div class="card h-100">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="fas fa-<%= category === 'Forms' ? 'wpforms' : category === 'Navigation' ? 'compass' : category === 'Layout' ? 'th-large' : category === 'Content' ? 'file-alt' : 'cube' %> me-2"></i>
                                <%= category %>
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="list-group list-group-flush">
                                <% componentsByCategory[category].forEach(component => { %>
                                <div class="list-group-item d-flex justify-content-between align-items-center px-0">
                                    <div>
                                        <h6 class="mb-1"><%= component.title %></h6>
                                        <small class="text-muted"><%= component.description %></small>
                                    </div>
                                    <div class="btn-group btn-group-sm">
                                        <% if (component.hasDemo) { %>
                                        <a href="/<%= version.version %>/demo/<%= component.name %>" 
                                           class="btn btn-outline-primary" title="Demo">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <% } %>
                                        <% if (component.hasDocs) { %>
                                        <a href="/<%= version.version %>/docs/<%= component.name %>" 
                                           class="btn btn-outline-secondary" title="Docs">
                                            <i class="fas fa-book"></i>
                                        </a>
                                        <% } %>
                                    </div>
                                </div>
                                <% }) %>
                            </div>
                        </div>
                        <div class="card-footer">
                            <small class="text-muted">
                                <%= componentsByCategory[category].length %> component<%= componentsByCategory[category].length !== 1 ? 's' : '' %> available
                            </small>
                        </div>
                    </div>
                </div>
                <% }) %>
            </div>
            
            <div class="text-center mt-4">
                <a href="/<%= version.version %>/demo" class="btn btn-primary btn-lg">
                    <i class="fas fa-th me-2"></i>
                    Browse All Components
                </a>
            </div>
        </div>
    </div>
    
    <!-- Customization Section -->
    <div class="row mb-5" id="customization">
        <div class="col-12">
            <h2 class="mb-4">
                <i class="fas fa-palette me-2 text-warning"></i>
                Customization
            </h2>
            
            <div class="row">
                <div class="col-lg-6 mb-4">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="fas fa-paint-brush me-2"></i>
                                Theme Variables
                            </h5>
                        </div>
                        <div class="card-body">
                            <p>Customize the UI Kit using CSS custom properties:</p>
                            <pre class="bg-light p-3 rounded demo-code"><code>:root {
<% Object.keys(config.theme.variables).forEach(key => { %>  --lbm-<%= key %>: <%= config.theme.variables[key] %>;
<% }) %>}</code></pre>
                        </div>
                    </div>
                </div>
                
                <div class="col-lg-6 mb-4">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="fas fa-cogs me-2"></i>
                                Configuration
                            </h5>
                        </div>
                        <div class="card-body">
                            <p>Configure components globally:</p>
                            <pre class="bg-light p-3 rounded demo-code"><code>// Initialize LBM UI Kit
LBMUIKit.init({
  theme: 'light', // or 'dark'
  animations: true,
  autoInit: true
});</code></pre>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- API Reference Section -->
    <div class="row mb-5" id="api-reference">
        <div class="col-12">
            <h2 class="mb-4">
                <i class="fas fa-code me-2 text-info"></i>
                API Reference
            </h2>
            
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-server me-2"></i>
                        Version API Endpoints
                    </h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Endpoint</th>
                                    <th>Method</th>
                                    <th>Description</th>
                                    <th>Response</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><code>/api/versions</code></td>
                                    <td><span class="badge bg-success">GET</span></td>
                                    <td>Get all available versions</td>
                                    <td>Array of version objects</td>
                                </tr>
                                <tr>
                                    <td><code>/api/versions/<%= version.version %></code></td>
                                    <td><span class="badge bg-success">GET</span></td>
                                    <td>Get current version details</td>
                                    <td>Version object with metadata</td>
                                </tr>
                                <tr>
                                    <td><code>/api/versions/<%= version.version %>/components</code></td>
                                    <td><span class="badge bg-success">GET</span></td>
                                    <td>Get all components for this version</td>
                                    <td>Array of component objects</td>
                                </tr>
                                <tr>
                                    <td><code>/api/versions/<%= version.version %>/components/{name}</code></td>
                                    <td><span class="badge bg-success">GET</span></td>
                                    <td>Get specific component details</td>
                                    <td>Component object with examples</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Additional Resources -->
    <div class="row mb-5">
        <div class="col-12">
            <h2 class="mb-4">
                <i class="fas fa-external-link-alt me-2 text-secondary"></i>
                Additional Resources
            </h2>
            
            <div class="row">
                <div class="col-md-4 mb-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <i class="fas fa-history fa-3x text-primary mb-3"></i>
                            <h5 class="card-title">Changelog</h5>
                            <p class="card-text">View version history and updates</p>
                            <a href="/<%= version.version %>/docs/changelog" class="btn btn-outline-primary">
                                View Changelog
                            </a>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-4 mb-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <i class="fas fa-question-circle fa-3x text-success mb-3"></i>
                            <h5 class="card-title">FAQ</h5>
                            <p class="card-text">Frequently asked questions</p>
                            <a href="/<%= version.version %>/docs/faq" class="btn btn-outline-success">
                                View FAQ
                            </a>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-4 mb-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <i class="fas fa-graduation-cap fa-3x text-warning mb-3"></i>
                            <h5 class="card-title">Examples</h5>
                            <p class="card-text">Real-world usage examples</p>
                            <a href="/<%= version.version %>/docs/examples" class="btn btn-outline-warning">
                                View Examples
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<% end %>

<% contentFor('scripts') %>
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Smooth scrolling for anchor links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
            e.preventDefault();
            const target = document.querySelector(this.getAttribute('href'));
            if (target) {
                target.scrollIntoView({
                    behavior: 'smooth',
                    block: 'start'
                });
            }
        });
    });
    
    // Hover effects for navigation cards
    document.querySelectorAll('.hover-bg-primary').forEach(card => {
        card.addEventListener('mouseenter', function() {
            this.style.backgroundColor = 'var(--bs-primary)';
            this.style.color = 'white';
            this.style.transition = 'all 0.2s ease';
        });
        
        card.addEventListener('mouseleave', function() {
            this.style.backgroundColor = '';
            this.style.color = '';
        });
    });
    
    // Add copy functionality to code blocks
    document.querySelectorAll('.demo-code').forEach(block => {
        const wrapper = document.createElement('div');
        wrapper.className = 'position-relative';
        block.parentNode.insertBefore(wrapper, block);
        wrapper.appendChild(block);
        
        const copyBtn = document.createElement('button');
        copyBtn.className = 'btn btn-sm btn-outline-light position-absolute top-0 end-0 m-2';
        copyBtn.innerHTML = '<i class="fas fa-copy"></i>';
        copyBtn.title = 'Copy code';
        
        copyBtn.addEventListener('click', () => {
            const code = block.textContent;
            navigator.clipboard.writeText(code).then(() => {
                copyBtn.innerHTML = '<i class="fas fa-check"></i>';
                setTimeout(() => {
                    copyBtn.innerHTML = '<i class="fas fa-copy"></i>';
                }, 2000);
            });
        });
        
        wrapper.appendChild(copyBtn);
    });
});
</script>
<% end %>