<header class="navbar sticky-top flex-md-nowrap p-0 shadow" data-bs-theme-target="header">
    <a class="navbar-brand col-md-3 col-lg-2 me-0 px-3 fs-6" href="/v/1.0.0">
        <i class="fas fa-cube me-2"></i>
        LBM UI Kit v1.0.0
    </a>

    <!-- Mobile menu toggle -->
    <button class="navbar-toggler position-absolute d-md-none collapsed" type="button" data-bs-toggle="collapse"
        data-bs-target="#sidebarMenu" aria-controls="sidebarMenu" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Version info -->
    <div class="navbar-nav flex-row me-auto">
        <div class="nav-item">
            <span class="badge bg-primary ms-3">v1.0.0</span>
        </div>
    </div>

    <!-- User menu -->
    <div class="navbar-nav">
        <div class="nav-item text-nowrap">
            <a class="nav-link px-3" href="#" data-theme-toggle onclick="LBM.Theme.toggle()" title="Chuyển đổi theme">
                <i class="fas fa-moon"></i>
            </a>
        </div>
    </div>
</header>

<script>
    // Chức năng tìm kiếm components
    document.addEventListener('DOMContentLoaded', function () {
        const searchInput = document.getElementById('searchInput');
        if (searchInput) {
            searchInput.addEventListener('input', function (e) {
                const searchTerm = e.target.value.toLowerCase();
                const sidebarLinks = document.querySelectorAll('.sidebar .nav-link');

                sidebarLinks.forEach(link => {
                    const text = link.textContent.toLowerCase();
                    const listItem = link.closest('.nav-item');

                    if (text.includes(searchTerm) || searchTerm === '') {
                        listItem.style.display = 'block';
                    } else {
                        listItem.style.display = 'none';
                    }
                });
            });
        }

        // Update theme toggle icon based on current theme
        document.addEventListener('lbm:theme:changed', function (e) {
            const themeToggle = document.querySelector('[data-theme-toggle] i');
            if (themeToggle) {
                if (e.detail.theme === 'dark') {
                    themeToggle.className = 'fas fa-sun';
                } else {
                    themeToggle.className = 'fas fa-moon';
                }
            }
        });
    });
</script>