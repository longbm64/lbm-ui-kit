<script>
// Initialize tooltips when Bootstrap is ready
LBMUIKit.onReady(function() {
  var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
  var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
    return new bootstrap.Tooltip(tooltipTriggerEl)
  })
  
  // Initialize scrollspy
  var scrollSpyList = [].slice.call(document.querySelectorAll('[data-bs-spy="scroll"]'))
  scrollSpyList.forEach(function (scrollSpyEl) {
    new bootstrap.ScrollSpy(scrollSpyEl)
  })
});

// Programmatic scrollspy control
const programmaticScrollspyElement = document.getElementById('programmaticScrollspy');
let programmaticScrollSpy = null;

// Initialize programmatic scrollspy
document.addEventListener('DOMContentLoaded', function() {
  if (programmaticScrollspyElement) {
    programmaticScrollSpy = new bootstrap.ScrollSpy(programmaticScrollspyElement, {
      target: '#prog-navbar',
      rootMargin: '0px 0px -40%',
      smoothScroll: true
    });
    
    // Add event listener for scrollspy activation
    programmaticScrollspyElement.addEventListener('activate.bs.scrollspy', function (event) {
      logScrollspyEvent(`Activated: ${event.relatedTarget}`);
    });
  }
});

// Control functions
function scrollToSection(sectionId) {
  const section = document.getElementById(sectionId);
  if (section) {
    section.scrollIntoView({ behavior: 'smooth' });
    logScrollspyEvent(`Navigated to: ${sectionId}`);
  }
}

function refreshScrollspy() {
  if (programmaticScrollSpy) {
    programmaticScrollSpy.refresh();
    logScrollspyEvent('Scrollspy refreshed');
  }
}

function disposeScrollspy() {
  if (programmaticScrollSpy) {
    programmaticScrollSpy.dispose();
    programmaticScrollSpy = null;
    logScrollspyEvent('Scrollspy disposed');
  }
}

function logScrollspyEvent(message) {
  const eventsContainer = document.getElementById('scrollspyEvents');
  const timestamp = new Date().toLocaleTimeString();
  const eventHtml = `<p class="mb-1">[${timestamp}] ${message}</p>`;
  eventsContainer.insertAdjacentHTML('afterbegin', eventHtml);
  
  // Keep only last 10 events
  const events = eventsContainer.querySelectorAll('p');
  if (events.length > 10) {
    events[events.length - 1].remove();
  }
  
  // Auto-scroll to top of events
  eventsContainer.scrollTop = 0;
}

// Copy to clipboard function
function copyToClipboard(elementId) {
  const element = document.getElementById(elementId);
  const text = element.textContent;
  
  navigator.clipboard.writeText(text).then(function() {
    // Show success feedback
    const btn = event.target.closest('.copy-btn');
    const originalTitle = btn.getAttribute('data-bs-original-title');
    const tooltip = bootstrap.Tooltip.getInstance(btn);
    
    btn.setAttribute('data-bs-original-title', 'Copied!');
    tooltip.show();
    
    setTimeout(() => {
      btn.setAttribute('data-bs-original-title', originalTitle);
    }, 2000);
  }).catch(function(err) {
    console.error('Failed to copy text: ', err);
  });
}
</script>