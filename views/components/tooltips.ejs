<script>
// Initialize all tooltips
var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
  return new bootstrap.Tooltip(tooltipTriggerEl)
})

// Programmatic control functions
const tooltipElement = document.getElementById('programmaticTooltip');
let tooltip = null;

// Initialize the programmatic tooltip
document.addEventListener('DOMContentLoaded', function() {
  if (tooltipElement) {
    tooltip = new bootstrap.Tooltip(tooltipElement);
  }
});

function showTooltip() {
  if (tooltip) tooltip.show();
}

function hideTooltip() {
  if (tooltip) tooltip.hide();
}

function toggleTooltip() {
  if (tooltip) tooltip.toggle();
}

function updateTooltip() {
  if (tooltip && tooltipElement) {
    tooltipElement.setAttribute('data-bs-original-title', 'Updated tooltip content!');
    tooltip.setContent({ '.tooltip-inner': 'Updated tooltip content!' });
  }
}

function disposeTooltip() {
  if (tooltip) {
    tooltip.dispose();
    tooltip = null;
  }
}

// Copy to clipboard function
function copyToClipboard(elementId) {
  const element = document.getElementById(elementId);
  const text = element.textContent;
  
  navigator.clipboard.writeText(text).then(function() {
    // Show success feedback
    const btn = event.target.closest('.copy-btn');
    const originalTitle = btn.getAttribute('data-bs-original-title');
    const tooltip = bootstrap.Tooltip.getInstance(btn);
    
    btn.setAttribute('data-bs-original-title', 'Copied!');
    tooltip.show();
    
    setTimeout(() => {
      btn.setAttribute('data-bs-original-title', originalTitle);
    }, 2000);
  }).catch(function(err) {
    console.error('Failed to copy text: ', err);
  });
}
</script>

