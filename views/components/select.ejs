<script>
// Format date input to use MM-DD-YYYY format
document.addEventListener('DOMContentLoaded', function() {
  // Initialize event listeners for select events
  const eventSelect = document.getElementById('eventSelect');
  if (eventSelect) {
    eventSelect.addEventListener('change', function(e) {
      logSelectEvent(`Select changed to: ${e.target.value}`);
    });
    
    eventSelect.addEventListener('focus', function(e) {
      logSelectEvent('Select focused');
    });
    
    eventSelect.addEventListener('blur', function(e) {
      logSelectEvent('Select blurred');
    });
  }
  
  // Initialize form validation
  const forms = document.querySelectorAll('.needs-validation');
  Array.from(forms).forEach(function(form) {
    form.addEventListener('submit', function(event) {
      if (!form.checkValidity()) {
        event.preventDefault();
        event.stopPropagation();
        logSelectEvent('Form validation failed');
      } else {
        event.preventDefault(); // Prevent actual submission for demo
        logSelectEvent('Form validation passed');
      }
      form.classList.add('was-validated');
    });
  });
});

// Select control functions
function setSelectValue() {
  const select = document.getElementById('controlledSelect');
  select.value = 'option2';
  logSelectEvent('Select value set to: option2');
}

function clearSelect() {
  const select = document.getElementById('controlledSelect');
  select.value = '';
  logSelectEvent('Select cleared');
}

function focusSelect() {
  const select = document.getElementById('controlledSelect');
  select.focus();
  logSelectEvent('Select focused programmatically');
}

function toggleSelectDisabled() {
  const select = document.getElementById('controlledSelect');
  select.disabled = !select.disabled;
  logSelectEvent(`Select ${select.disabled ? 'disabled' : 'enabled'}`);
}

// Dynamic options functions
function loadTechOptions() {
  const select = document.getElementById('dynamicSelect');
  select.innerHTML = `
    <option value="">Choose technology</option>
    <option value="html">HTML</option>
    <option value="css">CSS</option>
    <option value="js">JavaScript</option>
    <option value="react">React</option>
    <option value="vue">Vue.js</option>
  `;
  logSelectEvent('Tech options loaded');
}

function loadDesignOptions() {
  const select = document.getElementById('dynamicSelect');
  select.innerHTML = `
    <option value="">Choose design skill</option>
    <option value="ui">UI Design</option>
    <option value="ux">UX Design</option>
    <option value="graphic">Graphic Design</option>
    <option value="branding">Branding</option>
    <option value="illustration">Illustration</option>
  `;
  logSelectEvent('Design options loaded');
}

function clearOptions() {
  const select = document.getElementById('dynamicSelect');
  select.innerHTML = '<option value="">Choose category first</option>';
  logSelectEvent('Options cleared');
}

// Multiple select functions
function selectAll() {
  const select = document.getElementById('multiControlSelect');
  for (let option of select.options) {
    option.selected = true;
  }
  logSelectEvent('All options selected');
  updateSelectedValues();
}

function selectNone() {
  const select = document.getElementById('multiControlSelect');
  for (let option of select.options) {
    option.selected = false;
  }
  logSelectEvent('All options deselected');
  updateSelectedValues();
}

function getSelectedValues() {
  updateSelectedValues();
  logSelectEvent('Selected values retrieved');
}

function updateSelectedValues() {
  const select = document.getElementById('multiControlSelect');
  const selectedValues = Array.from(select.selectedOptions).map(option => option.value);
  const valuesDiv = document.getElementById('selectedValues');
  
  if (selectedValues.length > 0) {
    valuesDiv.innerHTML = selectedValues.map(value => `<span class="badge bg-primary me-1">${value}</span>`).join('');
  } else {
    valuesDiv.innerHTML = '<small class="text-muted">No items selected</small>';
  }
}

// Custom validation functions
function validatePriority(select) {
  const feedbackDiv = select.parentNode.querySelector('.feedback-message');
  const value = select.value;
  
  if (!feedbackDiv) {
    const div = document.createElement('div');
    div.className = 'feedback-message';
    select.parentNode.appendChild(div);
  }
  
  const feedback = select.parentNode.querySelector('.feedback-message');
  
  if (value === '') {
    select.classList.add('is-invalid');
    select.classList.remove('is-valid');
    feedback.className = 'feedback-message invalid-feedback d-block';
    feedback.textContent = 'Please select a priority level.';
  } else if (value === 'urgent') {
    select.classList.add('is-valid');
    select.classList.remove('is-invalid');
    feedback.className = 'feedback-message valid-feedback d-block';
    feedback.textContent = 'High priority selected - please ensure this is correct.';
  } else {
    select.classList.add('is-valid');
    select.classList.remove('is-invalid');
    feedback.className = 'feedback-message valid-feedback d-block';
    feedback.textContent = 'Good choice!';
  }
}

// Event logging function
function logSelectEvent(message) {
  const logDiv = document.getElementById('selectEventLog');
  if (logDiv) {
    const timestamp = new Date().toLocaleTimeString();
    const logEntry = document.createElement('div');
    logEntry.innerHTML = `<small><strong>${timestamp}:</strong> ${message}</small>`;
    logDiv.appendChild(logEntry);
    logDiv.scrollTop = logDiv.scrollHeight;
    
    // Keep only last 10 entries
    while (logDiv.children.length > 10) {
      logDiv.removeChild(logDiv.firstChild);
    }
  }
}

// Copy to clipboard function
function copyToClipboard(elementId) {
  const element = document.getElementById(elementId);
  const text = element.textContent;
  
  navigator.clipboard.writeText(text).then(function() {
    // Show success feedback
    const btn = event.target.closest('button');
    const originalText = btn.innerHTML;
    
    btn.innerHTML = '<i class="fas fa-check me-1"></i>Copied!';
    btn.classList.remove('btn-outline-secondary');
    btn.classList.add('btn-success');
    
    setTimeout(() => {
      btn.innerHTML = originalText;
      btn.classList.remove('btn-success');
      btn.classList.add('btn-outline-secondary');
    }, 2000);
  }).catch(function(err) {
    console.error('Failed to copy text: ', err);
  });
}
