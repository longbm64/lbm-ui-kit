<script>
// Copy to clipboard function
function copyToClipboard(elementId) {
  const element = document.getElementById(elementId);
  const text = element.textContent;
  
  navigator.clipboard.writeText(text).then(function() {
    // Show success feedback
    const button = event.target.closest('button');
    const originalText = button.innerHTML;
    button.innerHTML = '<i class="fas fa-check me-1"></i>Copied!';
    button.classList.remove('btn-outline-secondary');
    button.classList.add('btn-success');
    
    setTimeout(() => {
      button.innerHTML = originalText;
      button.classList.remove('btn-success');
      button.classList.add('btn-outline-secondary');
    }, 2000);
  });
}

// Dynamic content loading
function loadDynamicContent(option) {
  const menu = document.getElementById('dynamicMenu');
  const button = document.getElementById('dynamicDropdown');
  
  // Simulate loading
  button.innerHTML = 'Loading...';
  
  setTimeout(() => {
    button.innerHTML = `Selected: ${option}`;
    
    // Update menu content
    menu.innerHTML = `
      <li><h6 class="dropdown-header">Loaded Content for ${option}</h6></li>
      <li><a class="dropdown-item" href="#">Sub-option 1</a></li>
      <li><a class="dropdown-item" href="#">Sub-option 2</a></li>
      <li><a class="dropdown-item" href="#">Sub-option 3</a></li>
      <li><hr class="dropdown-divider"></li>
      <li><a class="dropdown-item" href="#" onclick="resetDynamicContent()">Reset</a></li>
    `;
  }, 1000);
}

function resetDynamicContent() {
  const menu = document.getElementById('dynamicMenu');
  const button = document.getElementById('dynamicDropdown');
  
  button.innerHTML = 'Load Content';
  menu.innerHTML = `
    <li><a class="dropdown-item" href="#" onclick="loadDynamicContent('option1')">Load Option 1</a></li>
    <li><a class="dropdown-item" href="#" onclick="loadDynamicContent('option2')">Load Option 2</a></li>
    <li><a class="dropdown-item" href="#" onclick="loadDynamicContent('option3')">Load Option 3</a></li>
  `;
}

// Search functionality
function filterDropdownItems() {
  const input = document.getElementById('searchInput');
  const filter = input.value.toLowerCase();
  const items = document.querySelectorAll('#searchableItems .dropdown-item');
  
  items.forEach(item => {
    const text = item.textContent.toLowerCase();
    const li = item.parentElement;
    if (text.includes(filter)) {
      li.style.display = 'block';
    } else {
      li.style.display = 'none';
    }
  });
}

// Multi-select functionality
function updateMultiSelect() {
  const checkboxes = document.querySelectorAll('#multiSelectBtn + .dropdown-menu input[type="checkbox"]');
  const button = document.getElementById('multiSelectBtn');
  const selected = Array.from(checkboxes).filter(cb => cb.checked);
  
  button.innerHTML = `Select Multiple (${selected.length})`;
  
  if (selected.length > 0) {
    const selectedValues = selected.map(cb => cb.nextElementSibling.textContent).join(', ');
    button.title = `Selected: ${selectedValues}`;
  } else {
    button.title = '';
  }
}

// Programmatic dropdown control
function showDropdown() {
  const dropdown = new bootstrap.Dropdown(document.querySelector('#programmableDropdown .dropdown-toggle'));
  dropdown.show();
}

function hideDropdown() {
  const dropdown = new bootstrap.Dropdown(document.querySelector('#programmableDropdown .dropdown-toggle'));
  dropdown.hide();
}

function toggleDropdown() {
  const dropdown = new bootstrap.Dropdown(document.querySelector('#programmableDropdown .dropdown-toggle'));
  dropdown.toggle();
}

// Event logging
function logDropdownEvent(message) {
  const log = document.getElementById('eventLog');
  const timestamp = new Date().toLocaleTimeString();
  log.innerHTML += `<div><small class="text-muted">${timestamp}:</small> ${message}</div>`;
  log.scrollTop = log.scrollHeight;
}

// Event listeners for dropdown events
document.addEventListener('DOMContentLoaded', function() {
  const eventDropdown = document.getElementById('eventDropdown');
  
  eventDropdown.addEventListener('show.bs.dropdown', function() {
    logDropdownEvent('Dropdown is about to be shown');
  });
  
  eventDropdown.addEventListener('shown.bs.dropdown', function() {
    logDropdownEvent('Dropdown has been shown');
  });
  
  eventDropdown.addEventListener('hide.bs.dropdown', function() {
    logDropdownEvent('Dropdown is about to be hidden');
  });
  
  eventDropdown.addEventListener('hidden.bs.dropdown', function() {
    logDropdownEvent('Dropdown has been hidden');
  });
});
</script>