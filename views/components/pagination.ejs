    const totalPagesDisplay = document.getElementById('totalPagesDisplay');
    const itemsPerPageDisplay = document.getElementById('itemsPerPageDisplay');
    
    if (currentPageDisplay) currentPageDisplay.textContent = this.currentPage;
    if (totalPagesDisplay) totalPagesDisplay.textContent = this.totalPages;
    if (itemsPerPageDisplay) itemsPerPageDisplay.textContent = itemsPerPage;
  }
}

