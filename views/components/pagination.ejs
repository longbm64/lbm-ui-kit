  goToPage(page) {
    if (page >= 1 && page <= this.totalPages) {
      this.currentPage = page;
      this.render();
      this.onPageChange(page);
      this.updateDisplays();
    }
  }
  
  setTotalPages(total) {
    this.totalPages = total;
    if (this.currentPage > total) {
      this.currentPage = total;
    }
    this.render();
    this.updateDisplays();
