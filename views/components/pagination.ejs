                    <pre class="code-block"><code id="programmatic-pagination-code" class="language-html">&lt;nav aria-label="Dynamic pagination example" id="dynamicPaginationNav"&gt;
  &lt;ul class="pagination" id="dynamicPagination"&gt;
    &lt;!-- Pagination will be generated here --&gt;
  &lt;/ul&gt;
&lt;/nav&gt;

&lt;script&gt;
class PaginationController {
  constructor(containerId, options = {}) {
    this.container = document.getElementById(containerId);
    this.currentPage = options.currentPage || 1;
    this.totalPages = options.totalPages || 10;
    this.maxVisiblePages = options.maxVisiblePages || 5;
    this.onPageChange = options.onPageChange || function() {};
    
    this.render();
  }
  
  render() {
    const pagination = this.generatePagination();
    this.container.innerHTML = pagination;
    this.attachEventListeners();
  }
  
  generatePagination() {
    let html = '';
    
    // Previous button
    const prevDisabled = this.currentPage === 1 ? 'disabled' : '';
    html += `&lt;li class="page-item ${prevDisabled}"&gt;`;
    html += `&lt;a class="page-link" href="#" data-page="${this.currentPage - 1}" aria-label="Previous"&gt;`;
    html += `&lt;span aria-hidden="true"&gt;&amp;laquo;&lt;/span&gt;&lt;/a&gt;&lt;/li&gt;`;
    
    // Page numbers
    const startPage = Math.max(1, this.currentPage - Math.floor(this.maxVisiblePages / 2));
    const endPage = Math.min(this.totalPages, startPage + this.maxVisiblePages - 1);
    
    for (let i = startPage; i &lt;= endPage; i++) {
      const active = i === this.currentPage ? 'active' : '';
      const ariaCurrent = i === this.currentPage ? 'aria-current="page"' : '';
      html += `&lt;li class="page-item ${active}" ${ariaCurrent}&gt;`;
      html += `&lt;a class="page-link" href="#" data-page="${i}"&gt;${i}&lt;/a&gt;&lt;/li&gt;`;
