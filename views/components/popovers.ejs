<script>
// Wait for Bootstrap to be available
function initializePopovers() {
  if (typeof bootstrap === 'undefined') {
    setTimeout(initializePopovers, 100);
    return;
  }
  
  // Initialize all popovers except the programmatic one
  var popoverTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="popover"]:not(#programmaticPopover)'))
  var popoverList = popoverTriggerList.map(function (popoverTriggerEl) {
    return new bootstrap.Popover(popoverTriggerEl)
  })
  
  // Initialize the programmatic popover separately (without auto-trigger)
  const popoverElement = document.getElementById('programmaticPopover');
  if (popoverElement) {
    window.popover = new bootstrap.Popover(popoverElement, {
      trigger: 'manual'
    });
  }
}

// Programmatic control functions
let popover = null;

// Initialize when DOM is ready
document.addEventListener('DOMContentLoaded', function() {
  initializePopovers();
});

function showBootstrapPopover() {
  const element = document.getElementById('programmaticPopover');
  if (element && window.popover) {
    try {
      window.popover.show();
    } catch (error) {
      console.error('Error showing popover:', error);
    }
  }
}

function hideBootstrapPopover() {
  const element = document.getElementById('programmaticPopover');
  if (element && window.popover) {
    try {
      window.popover.hide();
    } catch (error) {
      console.error('Error hiding popover:', error);
    }
  }
}

function toggleBootstrapPopover() {
  const element = document.getElementById('programmaticPopover');
  if (element && window.popover) {
    try {
      window.popover.toggle();
    } catch (error) {
      console.error('Error toggling popover:', error);
    }
  }
}

function updateBootstrapPopover() {
  if (window.popover) {
    try {
      // Dispose current popover and create new one with updated content
      const element = document.getElementById('programmaticPopover');
      window.popover.dispose();
      
      // Update the element attributes
      element.setAttribute('data-bs-title', 'Updated Title');
      element.setAttribute('data-bs-content', 'This content has been updated programmatically!');
      
      // Recreate the popover
      window.popover = new bootstrap.Popover(element, { trigger: 'manual' });
      window.popover.show();
    } catch (error) {
      console.error('Error updating popover:', error);
    }
  }
}

function disposeBootstrapPopover() {
  if (window.popover) {
    try {
      window.popover.dispose();
      window.popover = null;
    } catch (error) {
      console.error('Error disposing popover:', error);
    }
  }
}

// Copy to clipboard function
function copyToClipboard(elementId) {
  const element = document.getElementById(elementId);
  const text = element.textContent;
  
  navigator.clipboard.writeText(text).then(function() {
    // Show success feedback
    const btn = event.target.closest('.copy-btn');
    const originalTitle = btn.getAttribute('data-bs-original-title');
    const tooltip = bootstrap.Tooltip.getInstance(btn);
    
    btn.setAttribute('data-bs-original-title', 'Copied!');
    tooltip.show();
    
    setTimeout(() => {
      btn.setAttribute('data-bs-original-title', originalTitle);
    }, 2000);
  }).catch(function(err) {
    console.error('Failed to copy text: ', err);
  });
}

